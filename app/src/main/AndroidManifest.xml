<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="im.momo.contact" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_USER_DICTIONARY" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <application
        android:allowBackup="true"
        android:name="im.momo.contact.MMApplication"
        android:icon="@drawable/momo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <service android:name="cn.com.nd.momo.account.service.AccountService">
            <intent-filter>
            <action android:name="android.accounts.AccountAuthenticator"></action> </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator" android:resource="@xml/authenticator">
            </meta-data>
        </service>

        <!--<service android:name="cn.com.nd.momo.account.service.SyncService"-->
            <!--android:exported="true" android:process=":contacts">-->
            <!--<intent-filter>-->
                <!--<action android:name="android.content.SyncAdapter" />-->
            <!--</intent-filter>-->
            <!--<meta-data android:name="android.content.SyncAdapter" android:resource="@xml/sync_momo_contacts" />-->
        <!--</service>-->

        <activity
            android:name="im.momo.contact.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="im.momo.contact.activity.VerifyActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_verify" >
        </activity>

        <activity
            android:name="im.momo.contact.MainActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name="im.momo.contact.activity.AccountsBindActivity"
            android:screenOrientation="portrait"
            android:label="import" >
        </activity>

    </application>

</manifest>
